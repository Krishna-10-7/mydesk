{
    "name": "mydesk",
    "version": "1.0.0",
    "description": "Free Remote Desktop Sharing Application",
    "main": "src/main/main.js",
    "author": "MyDesk Team",
    "license": "MIT",
    "scripts": {
        "dev": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "dependencies": {
        "simple-peer": "^9.11.1",
        "socket.io-client": "^4.7.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "in.runtime.mydesk",
        "productName": "MyDesk",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "assets/icon.ico",
            "publisherName": "MyDesk Team",
            "signAndEditExecutable": false
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}